---
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import { SEO } from "astro-seo";
import { getImage } from "astro:assets";
import ogImage from "../assets/images/og-image.jpg";

interface Props {
  title: string;
}
const { title } = Astro.props;

const optimizedOgImage = await getImage({
  src: ogImage,
});
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <SEO
      title={title}
      description="Halvor Teigens CV Website"
      openGraph={{
        basic: {
          title: "Halvor Teigen",
          type: "website",
          image: `${optimizedOgImage.src}`,
        },
      }}
      extend={{
        // extending the default link tags
        link: [
          { rel: "icon", type: "image/svg+xml", href: "/favicon.ico" },
          { rel: "sitemap", href: "/sitemap-index.xml" },
        ],
        // extending the default meta tags
        meta: [
          {
            name: "generator",
            content: `${Astro.generator}`
          },
          { name: "twitter:title", content: "Halvor Teigen" },
          { name: "twitter:description", content: "Halvor Teigens resume website" },
        ],
      }}
    />
  </head>
  <body class="mx-auto max-w-screen-2xl">
    <Navigation />
    <slot />
    <Footer />
    <style is:global>
      html {
        font-family: system-ui, sans-serif;
        background: #111724;
        background-size: 224px;
        scroll-behavior: smooth;
      }
      body {
        position: relative;
        margin: 0px;
        min-height: 100vh;
      }
      code {
        font-family:
          Menlo,
          Monaco,
          Lucida Console,
          Liberation Mono,
          DejaVu Sans Mono,
          Bitstream Vera Sans Mono,
          Courier New,
          monospace;
      }
    </style>
  </body>
</html>
