---
import CapabilityLevels from "../components/CapabilityLevels.astro";
import Footer from "../components/Footer.astro";
import H1 from "../components/H1.astro";
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Capabilities | Halvor Teigen">
  <Header />
  <section>
    <img
      src="/images/tech-lights-bg.jpg"
      alt="Image of abstract tech lights"
      class="fixed -z-10 top-0 align-top opacity-20 w-full h-full object-cover"
    />
    <main class="m-auto p-4 max-w-3xl text-white">
      <H1 preText="My main " gradientText="capabilities" />
      <h2 class="text-3xl font-light text-center capitalize mb-12">
        knowledge level in my main capabilities
      </h2>
      <CapabilityLevels />
    </main>
    <Footer />
  </section>
</Layout>
