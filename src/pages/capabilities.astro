---
import { Image } from "astro:assets";
import MainLayout from "../layouts/MainLayout.astro";
import H1 from "../components/H1.astro";
import CapabilityLevels from "../components/CapabilityLevels.astro";
import techLightsBackgroundImage from "../assets/images/tech-lights-bg.jpg";
import CertificationsCarousel from "../components/CertificationsCarousel.astro";
import H2 from "../components/H2.astro";
import SecondaryButton from "../components/SecondaryButton.astro";
---

<MainLayout title="Capabilities | Halvor Teigen">
  <section>
    <Image
      src={techLightsBackgroundImage}
      alt=""
      class="fixed -z-10 top-0 align-top opacity-20 w-full h-full object-cover"
    />
    <main class="m-auto p-4 max-w-3xl text-white">
      <H1 preText="My main " gradientText="capabilities" />
      <H2 text="knowledge level in my main capabilities" />
      <CapabilityLevels />
      <H2 text="Certifications" classes="mt-20" />
      <CertificationsCarousel />
      <SecondaryButton
        text="Experience"
        href="/experience"
        classes="md:hidden float-right"
        iconName="bi:chevron-right"
        iconPosition="right"
      />
    </main>
  </section>
</MainLayout>
