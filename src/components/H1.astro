---
interface Props {
  preText: string;
  gradientText: string;
}

const { preText, gradientText } = Astro.props;
---

<h1 class="text-6xl font-bold text-center mt-20 mb-20">
  {preText} <span class="bg-gradient-to-r from-orange-500 from-10% to-orange-400 bg-clip-text text-transparent">{gradientText}</span>
</h1>
