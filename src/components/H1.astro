---
interface Props {
  preText: string;
  gradientText: string;
}

const { preText, gradientText } = Astro.props;
---

<h1 class="mb-20 mt-20 text-center text-6xl font-bold leading-tight">
  {preText}
  <span
    class="from-primary to-secondary-accent text-transparent bg-gradient-to-r from-10% bg-clip-text"
    >{gradientText}</span
  >
</h1>
