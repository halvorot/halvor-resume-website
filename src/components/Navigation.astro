---
import PrimaryButton from "./PrimaryButton.astro";
import { Bars3Icon } from "@heroicons/react/24/solid";

const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // remove the first "/"
---

<nav class="bg-black bg-opacity-30">
  <div
    class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4"
  >
    <a href="/" class="flex items-center">
      <img src="/logo.svg" class="h-10 mr-3" alt="Halvor Teigen Logo" />
      <span
        class="hidden sm:block text-2xl font-semibold text-white capitalize"
        >Halvor Teigen</span
      >
    </a>
    <div class="flex md:order-2">
      <PrimaryButton text="Download CV" ref="/halvor-teigen-cv-english.pdf" />
      <button
        data-collapse-toggle="navbar-cta"
        type="button"
        class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm rounded-lg md:hidden focus:outline-none focus:ring-2 text-gray-400 hover:bg-gray-700 focus:ring-gray-600"
        aria-controls="navbar-cta"
        aria-expanded="false"
      >
        <span class="sr-only">Open main menu</span>
        <Bars3Icon />
      </button>
    </div>
    <div
      class="items-center justify-between hidden w-full md:flex md:w-auto md:order-1"
      id="navbar-cta"
    >
      <ul
        class="flex flex-col font-medium p-4 md:p-0 mt-4 md:flex-row md:space-x-8 md:mt-0 md:border-0 bg-transparent"
      >
        <li><a href="/" class={currentPath === "" ? "active-item" : ""}>Home</a></li>
        <li><a href="/capabilities" class={currentPath === "capabilities" ? "active-item" : ""}>Capabilities</a></li>
        <li><a href="/" class={currentPath === "experience" ? "active-item" : ""}>Experience</a></li>
        <li><a href="/" class={currentPath === "contact" ? "active-item" : ""}>Contact</a></li>
      </ul>
    </div>
  </div>
</nav>
<style>
  nav li {
    @apply block py-2 pl-3 pr-4 bg-transparent hover:text-orange-300 md:p-0 text-white;
  }
  .active-item {
    @apply text-orange-500
  }
</style>
