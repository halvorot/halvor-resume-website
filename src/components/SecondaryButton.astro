---
import Icon from "astro-icon";

interface Props {
  text: string;
  href: string;
  ariaLabel: string;
  iconName?: string;
  iconPosition?: "left" | "right";
  classes?: string;
}

const { text, href, ariaLabel, iconName, iconPosition, classes, ...rest } =
  Astro.props;
---

<button
  type="button"
  class={`text-orange-300 px-2 py-1 rounded-md bg-black bg-opacity-60 ${classes}`}
  aria-label={ariaLabel}
  {...rest}
>
  <a href={href} aria-label={text} class="inline-flex items-center">
    {
      iconName && iconPosition === "left" && (
        <Icon name={iconName} class="text-slate-200 w-5" />
      )
    }
    {text}
    {
      iconName && iconPosition === "right" && (
        <Icon name={iconName} class="text-slate-200 w-5" />
      )
    }
  </a>
</button>
