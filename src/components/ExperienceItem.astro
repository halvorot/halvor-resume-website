---
import TagTile from "./TagTile.astro";
interface Props {
  startDate: Date;
  endDate?: Date;
  heading: string;
  subHeading: string;
  description: string;
  tags?: string[];
  align?: "left" | "right";
  classes?: string;
}

const {
  startDate,
  endDate,
  heading,
  subHeading,
  description,
  tags,
  align = "left",
  classes,
} = Astro.props;
---

<div
  class={`mb-10 ${align === "left" ? "text-left" : "text-right"}  ${classes}`}
>
  <p class="text-orange-500 text-lg font-bold leading-6">
    {startDate.getFullYear()}-{endDate?.getFullYear()}
  </p>
  <h3 class="text-slate-200 mb-3 text-2xl font-light">{heading}</h3>
  <h4 class="text-slate-200 text-lg font-medium">{subHeading}</h4>
  <p class="text-orange-300 text-base">
    {description}
  </p>
  {
    tags && (
      <div
        class={`mt-2 inline-flex flex-wrap items-center gap-1 ${
          align === "left" ? "justify-start" : "justify-end"
        }`}
      >
        {tags?.map((tag) => (
          <TagTile text={tag} />
        ))}
      </div>
    )
  }
</div>
