---
import { Image } from "astro:assets";

type ImageType = {
    src: string;
    width: number;
    height: number;
    format: "svg" | "png" | "jpg" | "jpeg" | "tiff" | "webp" | "gif" | "avif";
};

interface Props {
    href: string;
    image: ImageType;
    imageAlt: string;
    title?: string;
    badgeBackgroundClass?: string;
}

const { href, image, imageAlt, title, badgeBackgroundClass="bg-slate-200"} = Astro.props;
---

<a href={href} target="_blank">
    <div
        class="inline-flex flex-col items-center justify-center text-center leading-5 text-slate-200"
    >
        <div class=`w-24 aspect-square m-1 ${badgeBackgroundClass} rounded-full overflow-hidden inline-flex items-center justify-center`>
            <Image src={image} alt={imageAlt} />
        </div>
        <small>{title}</small>
    </div>
</a>
